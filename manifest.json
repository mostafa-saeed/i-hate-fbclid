{
  "name": "I Hate FBCLID",
  "version": "1.1.1",
  "description": "Chrome extension for removing fbclid query string from links on Facebook.com",
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "incognito": "split",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2,
  "author": {
    "name": "Mostafa Saeed",
    "email": "mostafa.saeed543@gmail.com"
  }
}